.swiper {
  height: 500rpx;
  width: 100%;
}

.swiper image {
  height: 100%;
  width: 100%;
}

.slide-image {
  display: inline-block;
  padding: 10rpx;
  margin: 20rpx;
  border: 1px solid #e3e3e5;
  border-radius: 6px;
  box-shadow: 1px 4px 10rpx 1px rgba(219, 224, 228, 0.5);
}
