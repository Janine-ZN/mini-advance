/**index.wxss**/
page {
  height: 100%;
  background: #48d1cc;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.userinfo-text {
  font-weight: bold;
  margin: 100rpx 0;
}

.userinfo-btn {
  width: 300rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  border: 1rpx solid #20b2aa;
  background: transparent;
  color: #20b2aa;
}
